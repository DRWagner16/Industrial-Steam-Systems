                </div>

                <div id="solutions-grid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                </div>
            </section>
            
            <section id="section-business-case" class="py-16 bg-gray-800 text-white rounded-2xl scroll-mt-24">
                <div class="text-center mb-12">
